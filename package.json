{
  "name": "bitcoin-typescript",
  "version": "1.0.0",
  "description": "typescript bitcoin version",
  "main": "index.ts",
  "lint-staged": {
    "linters": {
      "**/*.{ts,json}": [
        "prettier --config .prettierrc --write",
        "git add"
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "scripts": {
    "start": "yarn compile && node compiledSrc/index.js",
    "compile": "tsc --outDir compiledSrc",
    "prettier": "prettier --config .prettierrc --write '**/*.{ts, json}'",
    "pre-commit": "lint-staged",
    "commit": "git add . && git-cz"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phys1cal/bitcoin-typescript.git"
  },
  "keywords": [
    "typescript",
    "bitcoin",
    "crypto"
  ],
  "author": "linmiss",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/phys1cal/bitcoin-typescript/issues"
  },
  "homepage": "https://github.com/phys1cal/bitcoin-typescript#readme",
  "dependencies": {
    "crypto-js": "^3.1.9-1"
  },
  "devDependencies": {
    "@types/prettier": "^1.16.3",
    "cz-conventional-changelog": "2.1.0",
    "husky": "^2.2.0",
    "lint-staged": "^8.1.6",
    "prettier": "^1.17.0",
    "tslint": "^5.16.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
